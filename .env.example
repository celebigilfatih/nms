# NMS Service Configuration (.env.example)
# Copy to .env and customize for your environment

# Service Environment
NMS_ENV=development
NMS_LOG_LEVEL=INFO
NMS_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=nms_user
DB_PASSWORD=secure_password_here
DB_NAME=nms_db
DB_POOL_SIZE=10

# SNMP Configuration
SNMP_TIMEOUT=5
SNMP_RETRIES=3
MAX_CONCURRENT_POLLERS=20
SNMP_BULK_WALK_ENABLED=true

# Polling Intervals (seconds)
INTERFACE_POLL_INTERVAL=30
CPU_MEMORY_POLL_INTERVAL=300
INVENTORY_POLL_INTERVAL=3600

# Alarm Thresholds
CPU_THRESHOLD=80.0
MEMORY_THRESHOLD=80.0
TEMPERATURE_THRESHOLD=80.0

# Backend API Configuration
BACKEND_API_URL=http://localhost:3000
API_TIMEOUT=10

# Vendor OID Mapping
VENDOR_OID_CONFIG_PATH=./nms_service/snmp/vendor_oids.json
